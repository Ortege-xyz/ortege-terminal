{
    "compilerOptions": {
      /* Basic Options */
      "target": "es5", /* Specify ECMAScript target version. 'es5' ensures broad browser compatibility. */
      "lib": ["dom", "dom.iterable", "esnext"], /* Specify library files to be included in the compilation. */
      "allowJs": true, /* Allow JavaScript files to be compiled. Useful for gradual migration. */
      "skipLibCheck": true, /* Skip type checking of all declaration files (*.d.ts). Increases build speed. */
      "esModuleInterop": true, /* Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. */
      "allowSyntheticDefaultImports": true, /* Allow default imports from modules with no default export. */
      "strict": true, /* Enable all strict type-checking options. Recommended for better type safety. */
      "forceConsistentCasingInFileNames": true, /* Ensure that casing of file names is consistent in imports. */
      "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statements. */
      
      /* Module Resolution Options */
      "module": "esnext", /* Specify module code generation. 'esnext' allows for modern module features. */
      "moduleResolution": "node", /* Specify module resolution strategy. 'node' mimics Node.js module resolution. */
      "resolveJsonModule": true, /* Allow importing JSON modules. */
      "isolatedModules": true, /* Ensure that each file can be safely transpiled without relying on other imports. */
      
      /* Output Options */
      "noEmit": true, /* Do not emit outputs. CRA handles the build process. */
      
      /* JSX */
      "jsx": "react-jsx" /* Specify JSX code generation. 'react-jsx' is suitable for React 17+ with the new JSX transform. */
    },
    "include": ["src"], /* Specify which files to include in the compilation. */
    "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"] /* Specify which files to exclude from the compilation. */
  }
  